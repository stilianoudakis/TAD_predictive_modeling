	journal = {Genome Biol},
	journal-full = {Genome biology},
	keywords = {CTCF binding site clusters; CTCF orientation patterns; Chromatin architecture; Loop extrusion; TAD boundary conservation; TADs},
	month = {Aug},
	number = {1},
	pages = {197},
	pmid = {32782014},
	pst = {epublish},
	title = {Spatial patterns of CTCF sites define the anatomy of TADs and their boundaries},
	volume = {21},
	year = {2020},
